# yabai
alt + cmd - r : yabai --restart-service
# skhd
ctrl + cmd - r : skhd --restart

ctrl + shift - left : yabai -m window --focus west || yabai -m display --focus west
ctrl + shift - right : yabai -m window --focus east || yabai -m display --focus east
ctrl + shift - up : yabai -m window --focus north || yabai -m display --focus north
ctrl + shift - down : yabai -m window --focus south || yabai -m display --focus south

alt - h : osascript -e 'tell app "Finder" to display dialog "Hello World"'
alt - t : yabai -m window --toggle zoom-fullscreen
alt - r : yabai -m space --rotate 90

# float window
alt - f : yabai -m window --toggle float

cmd - left : yabai -m window --swap west || $(yabai -m window --display west; yabai -m display --focus west)
cmd - right : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east)
